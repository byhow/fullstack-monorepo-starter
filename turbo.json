{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**"]
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false
    },
    "format": {
      "inputs": ["*/**/*.{js,jsx,ts,tsx,json,css,scss,md}"]
    }
  }
}
